<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Published at:</strong>
  <%= @book.published_at %>
</p>

<p>
  <strong>Publisher:</strong>
  <%= @book.publisher.name %>
</p>

<p>
  <strong>Authors:</strong>
  <ul>
    <% @book.authors.each do |author| %>
      <li><%= author.name %></li>
    <% end %>
  </ul>
</p>

<p>
  <strong>Subjects:</strong>
  <ul>
    <% @book.subjects.each do |subject| %>
      <li><%= subject.name %></li>
    <% end %>
  </ul>
</p>

<%= link_to 'Back', books_path %>